# Environment Configuration for HealthBench

# CMS Provider Data Catalog API
CMS_API_BASE_URL=https://data.cms.gov
CMS_API_KEY=your_api_key_here

# Circuit Breaker Fallback Mode
# Set to "true" to enable CSV fallback mode during development
USE_CBF_MODE=true

# CSV Data Paths for Circuit Breaker Fallback
CSV_AGENCY_DATA_PATH=./data/agencies.csv
CSV_QUALITY_MEASURES_PATH=./data/quality_measures.csv
CSV_BENCHMARKS_PATH=./data/benchmarks.csv

# API Configuration
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Texas and Florida Sample Data Flag
# Set to "true" to specifically load Texas and Florida benchmark data
LOAD_TX_FL_BENCHMARK_DATA=true 